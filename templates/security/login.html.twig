{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

<div class="title">
	<h1>Connexion</h1>
</div>

<div class="container my-4">
	{% if error %}
	<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div class="row">
		{% if app.user %}
		<div class="col-12">
			<div class="my-3">
				Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('logout') }}">déconnexion</a>
			</div>
			<div class="dropdown-divider my-4"></div>
		</div>
		{% endif %}
	</div>

	<div class="row">

		<form method="post" class="col-md-6 offset-md-3 col-lg-4 offset-lg-4 my-5">

			{% if error %}
			<div class="">
				<div class="my-3">
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				</div>
				<div class="dropdown-divider my-4"></div>
			</div>
			{% endif %}

			<div class="mb-3">
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
					autocomplete="email" required autofocus>
			</div>

			<div class="mb-3">
				<label for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control"
					autocomplete="current-password" required>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" class="btn btn-success">

			{#
			Uncomment this section and add a remember_me option below your firewall to activate remember me
			functionality.
			See https://symfony.com/doc/current/security/remember_me.html
			#}

			<div class="checkbox mb-3">
				<label>
					<input type="checkbox" name="_remember_me"> Se souvenir de moi
				</label>
			</div>

			<div class="buttons">
				<button class="btn" type="submit">Connexion</button>
			</div>

		</form>
	</div>

	<div class="row">
		<div class="col-12">
			<div class="dropdown-divider my-4"></div>
		</div>
		<div class="my-3 text-center">
			<p>Pas encore de compte ? <a href="{{ path('register') }}">Inscrivez-vous</a> !</p>
		</div>
	</div>

</div>
{% endblock %}