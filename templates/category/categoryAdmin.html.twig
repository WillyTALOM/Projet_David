{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}catégories{% endblock %}

{% block body %}

<h1 class="pb-5 text-center">Liste des catégories</h1>

<table width="100%">
    <thead>
        <tr>
            <th>N°</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories|reverse %}
        <tr>
            <td>{{ loop.revindex }}</td>
            <td>{#<img src="{{category.img}}" alt="image principale de la categorie {{ category.name }}" class="pe-3">#}
                {{ category.name }}</td>
            <td>
                <a href="{{ path('category_update', {'id': category.id}) }}"><i
                        class="bi bi-pencil-square text-primary"></i></a>
                <a href="{{ path('category_delete', {'id': category.id}) }}"><i
                        class="bi bi-trash3 text-danger"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>


<div class="text-end mt-4">
    <a href="{{ path('create_category') }}" class="btn btn-success">Créér une catégorie</a>
</div>

{% endblock %}