{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Marque{% endblock %}

{% block body %}

<h1 class="pb-5 text-center">Liste des Marques</h1>

<table width="100%">
    <thead>
        <tr>
            <th>N°</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for brand in brands|reverse %}
        <tr>
            <td>{{ loop.revindex }}</td>
            <td>{{ brand.name }}</td>
            <td>
                <a href="{{ path('update_brand', {'id': brand.id}) }}"><i
                        class="bi bi-pencil-square text-primary"></i></a>
                <a href="{{ path('delete_brand', {'id': brand.id}) }}"><i class="bi bi-trash3 text-danger"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>


<div class="text-end mt-4">
    <a href="{{ path('create_brand') }}" class="btn btn-success">Créér une marque</a>
</div>

{% endblock %}