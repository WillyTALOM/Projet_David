{% extends "baseAdmin.html.twig" %}

{% block title %}modification marque{% endblock %}

{% block body %}

    <h1 class="mb-5 text-center">Modifier une marque</h1>

    {{ form_start(brandForm) }}

    <div class="row">
        <div class="col-6">
            
            {{ form_label(brandForm.name, 'Nom') }}
            {{ form_errors(brandForm.name) }}
            {{ form_widget(brandForm.name, {
                'attr': {
                    'placeholder': 'Ex.: Adidas'
                }
            }) }}
            {{ form_help(brandForm.name) }}
        </div>
        
    <div class="row">
        <div class="col-12 text-end my-3">
            <a href="{{ path('admin_brand')}}" class="btn btn-outline-danger me-3">Annuler</a>
            <button class="btn btn-success">Cr√©er</button>
        </div>
    </div>

{{ form_end(brandForm) }}

{% endblock %}
