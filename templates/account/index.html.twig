{% extends 'base.html.twig' %}



{% block title %}Mon Compte{% endblock %}

{% block body %}
{% if is_granted('ROLE_ADMIN') %}
<small><a href="{{path('admin')}}">Vous êtes un administrateur, accéder à l'espace administrateur </a></small><br />
{% endif %}

<div class="text-center">
    <h1>Bienvenue {{ app.user.lastname }} dans votre compte.<br />C'est dans cet espace que vous allez pouvoir gérer
        toutes vos informations personnelles.</h1>
</div>
<hr>

<hr>
<div class="row">

    <div class="col-md-4 text-center account-item ">
        <h1>Mot de passe</h1>
        <br />
        <div class="text-center">
            <a href="{#{{ path('account_password') }}#}">Modifier mon mot de passe</a>
        </div>
    </div>


    <div class="col-md-4 text-center account-item ">
        <h1>Mes adresses</h1>
        <br />
        {% if app.user.addresses|length == 0 %}
        <p class="text-center">
            Vous n'avez pas encore ajouté d'adresse dans votre compte client. Pour en ajouter une, veuillez <a
                href="{{ path('user_account_address_add') }}">cliquer ici</a>.
        </p>
        {% else %}
        <div class="row text-center">
            {% for address in app.user.addresses|slice(0,8) %}
            <div>
                {{address.address ~ ' ' ~ address.additional ~ ' ' ~ address.zip ~ ' ' ~ address.country}}

            </div>
            {% endfor %}
        </div>
        {% endif %}
        <div class="text-center">

            <a href="{{ path('user_account_address') }}">Gérer mes adresses</a>
        </div>

    </div>


    <div class="col-md-4 text-center account-item ">
        <h1>Mes commandes</h1>
        <br />
        {% if app.user.orders|length == 0 %}
        <p class="text-center">
            Vous n'avez pas encore ajouté d'adresse dans votre compte client. Pour en ajouter une, veuillez <a
                href="{{ path('user_account_address_add') }}">cliquer ici</a>.
        </p>
        {% else %}
        <div class="row text-center">
            {% for order in app.user.orders|slice(0,8) %}
            <div>
                {{order.reference ~ ' ' ~ order.billingAddress}}

            </div>
            {% endfor %}
        </div>
        {% endif %}
        <div class="text-center">
            <a href="{{ path('user_account_orders') }}">Mes commandes</a>
        </div>
    </div>

</div>
<hr>
{% endblock %}